{
  "name": "infrastructure-generator",
  "version": "1.0.0",
  "description": "Opinionated yet flexible configuration file generator for nginx and supervisord",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "unit": "nyc node test/index.js",
    "test": "npm run lint && npm run unit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hogart/infragen.git"
  },
  "keywords": [
    "nginx",
    "supervisord",
    "config"
  ],
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "eslint": "^2.8.0",
    "eslint-config-yandex": "^1.0.6",
    "nyc": "^6.4.0",
    "tape": "^4.5.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": "eslint-config-yandex",
    "rules": {
      "eol-last": [
        0
      ],
      "comma-dangle": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "constructor-super": [
        "error"
      ],
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-class-assign": [
        "error"
      ],
      "no-confusing-arrow": [
        "error"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-dupe-class-members": [
        "error"
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-new-symbol": [
        "error"
      ],
      "no-this-before-super": [
        "error"
      ],
      "no-useless-constructor": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "prefer-reflect": [
        "off"
      ],
      "prefer-rest-params": [
        "warn"
      ],
      "prefer-spread": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "require-yield": [
        "error"
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "yield-star-spacing": [
        "error",
        "after"
      ]
    }
  }
}
